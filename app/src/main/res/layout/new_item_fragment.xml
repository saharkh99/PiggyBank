<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="@dimen/normal_margin"
    android:gravity="center_horizontal"
    android:padding="@dimen/large_padding"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_height="match_parent">

    <RadioGroup
        android:padding="@dimen/large_padding"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"

        android:layoutDirection="rtl"
        android:id="@+id/radioGroup">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_income"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:buttonTint="@color/colorAccent"
            android:padding="@dimen/large_padding"
            android:text="@string/string_new_income"
            android:checked="false"
            android:textSize="20dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_expense"
            android:layout_width="fill_parent"
            android:buttonTint="@color/colorAccent"
            android:padding="@dimen/large_padding"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="@string/string_new_expense"
            android:checked="false"

            android:textSize="20dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:padding="@dimen/large_padding"
        android:layout_margin="@dimen/normal_margin"
        android:layout_gravity="center_horizontal"
        android:weightSum="3"
        android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="@string/string_amount"
        android:padding="@dimen/large_padding"
        android:textColor="@color/colorAccent"/>
        <EditText
            android:layout_width="0dp"
            android:id="@+id/amount_expense"
            android:textColor="@color/brown_box"
            android:layout_height="wrap_content"
            android:layout_weight=".5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:weightSum="3"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/large_padding"
        android:layout_margin="@dimen/normal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="@string/string_type"
            android:padding="@dimen/large_padding"
            android:textColor="@color/colorAccent"/>
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/shopping"
            android:scaleType="fitXY"
            android:clickable="true"
            android:id="@+id/type_picker"
            android:layout_height="wrap_content"
            android:layout_weight=".3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:weightSum="3"
        android:padding="@dimen/large_padding"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/normal_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="@string/string_color"
            android:padding="@dimen/large_padding"
            android:textColor="@color/colorAccent"/>
        <Button
            android:layout_width="0dp"
            android:textColor="@color/brown_box"
            android:layout_height="wrap_content"
            android:id="@+id/color_picker"
            android:layout_weight=".3"/>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save"
        android:layout_margin="@dimen/large_margin"
        android:layout_gravity="center"
        />
</LinearLayout>